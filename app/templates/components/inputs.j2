{% macro dropdown(title, options, for, size="md") %}
<div class="flex flex-col font-[IBMPlexSans] {{ getTwSizeClassInputField(size) }}">
  <label for="{{for}}" class="text-md text-gray-600">{{ title }}</label>
  <select class="rounded-none p-2 border-b-1 bg-white cursor-pointer" id="dropdown-{{stage.id}}-{{for}}" name="{{for}}">
    {% for option in options %}
    <option value="{{ option.value }}">{{ option.label }}</option>
    {% endfor %}
  </select>
</div>
{%- endmacro -%}

